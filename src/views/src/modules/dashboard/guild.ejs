<div class="dashboard-guild-modules">
  <div style="text-align: center; margin-top: 100px; text-align: center;">
    <% if(guild_icon){ %>
            <img src="https://cdn.discordapp.com/icons/<%= guild_id %>/<%= guild_icon %>.png" id="guild-icon" class="guild-icon rounded-circle" />
          <% } else { %>
            <img src="https://images-ext-2.discordapp.net/external/NAqkMZNPJgDiWBrSDqniAD1_sbWfiPqF4mgZyCtVs6s/https/discordapp.com/assets/6debd47ed13483642cf09e832ed0bc1b.png" id="guild-icon" class="guild-icon guild-icon rounded-circle" />
          <% } %>

    <h1 style="font-size: 40px;"><%= guild_name %></h1>
  </div>
  <div
    style="border-style: solid; border-color: rgb(39, 39, 39); border-width: 0.1px; margin-left: 15%; margin-right: 15%; margin-top: 30px;">
  </div>

  <div id="all-cards" style="text-align: center;">
    <div class="card-module">
      <a class="card-all" href="/guild/<%= guild_id %>/settings" style="text-decoration: none;">
        <div class="card justify-content-center" style="width: 23em; background-color: #272727;">
          <div class="card-image" style="margin-right: 70%; position: absolute;">
            <img src="https://i.ya-webdesign.com/images/svg-gear-flat.png" id="card-image" alt="Settings">
          </div>
          <div class="card-text" style="margin-left: 40%;">
            <h1>Settings</h1>
            <p style="color: #b9b9b9;">Modify the basic settings in your guild by giving it your touch.</p>
          </div>
        </div>
      </a>
    </div>
    <div class="card-module card-separator">
      <a class="card-all" href="/guild/<%= guild_id %>/moderation" style="text-decoration: none;">
        <div class="card justify-content-center" style="width: 23em; background-color: #272727;">
          <div class="card-image" style="margin-right: 70%; position: absolute;">
            <img src="https://cdn.discordapp.com/emojis/735273491913244723.png" id="card-image" alt="Moderation">
          </div>
          <div class="card-text" style="margin-left: 40%;">
            <h1>Moderation</h1>
            <p style="color: #b9b9b9;">Control and organize your guild creating a more pleasant environment.</p>
          </div>
        </div>
      </a>
    </div>
    <div class="card-module card-separator">
      <a class="card-all" href="/guild/<%= guild_id %>/utility" style="text-decoration: none;">
        <div class="card justify-content-center" style="width: 23em; background-color: #272727;">
          <div class="card-image" style="margin-right: 70%; position: absolute;">
            <img src="https://image.flaticon.com/icons/png/512/222/222177.png" id="card-image" alt="Utility">
          </div>
          <div class="card-text" style="margin-left: 40%;">
            <h1>Utility</h1>
            <p style="color: #b9b9b9; margin-right: 1%;">Make your guild better with awesome features and much more.</p>
          </div>
        </div>
      </a>
    </div>
